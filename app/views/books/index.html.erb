<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
 
  <tbody>
    <% @books.each do |book| %> 
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id), class: 'show' %></td>
      <td><%= link_to "Edit", edit_book_path(book.id), class: 'edit' %></td>
      <td><%= link_to "Destroy", book_path(book.id), class: 'destroy', method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
    <% end %>
  </tbody>
</table> 
 

<div class="new-book">
<%= form_with model: @book do |f| %>
  
    <h2>New book</h2>
    
    <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    
    <p>Title</p>
    <%= f.text_field :title, class: "title" %>
    <p>Body</p>
    <%= f.text_area :body, class: "body" %>
    <%= f.submit 'Create Book', class: 'submit' %>
<% end %>
 </div>

